<mvc:View controllerName="leavemanagement.controller.Dashboard"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:f="sap.f" height="100%">
	<App>
		<Page id="myPage" title="Side Navigation Example" enableScrolling="true">
			<customHeader>
				<OverflowToolbar>

					<!-- <Button icon="sap-icon://menu2" press=".onToggleSideNav" /> -->
					<!-- <Image src="./resources/sap/ui/documentation/sdk/images/logo_sap.png" height="30px" /> -->
					<Button id="btnLeave" text="Leave Request" level="H5" press=".onGoLeave" />
					<Button id="btnQuery" text="Query Generator" level="H5" press=".onGoQuery" />
					<ToolbarSpacer />
					<Button icon="sap-icon://search"/>
					<Button icon="sap-icon://bell"/>
					<Avatar initials="SN" displaySize="XS" />
				</OverflowToolbar>
			</customHeader>

			<content>
				<NavContainer id="pageContainer" initialPage="home" height="100%">
					<pages>

						<ScrollContainer id="home" horizontal="false" vertical="true" height="100%" width="100%" class="sapUiContentPadding SCROLLCONT">
							<VBox justifyContent="Center" alignItems="Center" height="100%">
								<Text text="Welcome to Sap B1 !!" />

							</VBox>

							<!-- <mvc:XMLView viewName="leavemanagement.view.Tiles" class="sapUiMediumMarginTop" /> -->

							<GenericTile class="sapUiTinyMargin" header="Purchasing" subheader="Cumulative Totals" press="onPressPurchasing">
								<TileContent unit="Count" footer="Payables">
									<NumericContent value="15" icon="sap-icon://purchase-order" withMargin="false" />
								</TileContent>
							</GenericTile>

							<GenericTile class="sapUiTinyMargin" header="Business Partner" subheader="Cumulative Totals" press="onPressBusinessPartner">
								<TileContent unit="Count" footer="Vendors / Customers">
									<NumericContent value="5" icon="sap-icon://supplier" withMargin="false" />
								</TileContent>
							</GenericTile>

							<GenericTile class="sapUiTinyMargin" header="Inventory" subheader="Cumulative Totals" press="onPressInventory">
								<TileContent unit="Count" footer="Stock &amp; Items">
									<NumericContent value="89" icon="sap-icon://warehouse" withMargin="false" />
								</TileContent>
							</GenericTile>



						</ScrollContainer>

					</pages>
				</NavContainer>
			</content>
		</Page>
	</App>
</mvc:View>