<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Dialog  title="Sign In"  stretchOnPhone="true" contentWidth="400px" >
   <customHeader>
        <Toolbar>
            <Title text="Sign In" width="100%" textAlign="Center"/>
            <ToolbarSpacer/>
            <Button icon="sap-icon://decline" type="Reject" press=".onCloseDialog"/>
        </Toolbar>
    </customHeader>
        <content >
            <VBox class="sapUiMediumMargin" >

                <!-- Email -->
                <Label text="Email" />
                <Input  type="Email" placeholder="Enter your email" required="true" value="{loginModel>/email}" valueState="{= ${loginModel>/login/emailError} ? 'Error' : 'None' }" valueStateText="{loginModel>/login/emailErrorText}" />

                <!-- Password -->
                <Label text="Password"  class="sapUiSmallMarginTop"/>
                <Input  type="Password" placeholder="Enter your password" required="true" value="{loginModel>/password}" valueState="{= ${loginModel>/login/passwordError} ? 'Error' : 'None' }" valueStateText="{loginModel>/login/passwordErrorText}"  />

                <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginTop">
                    <CheckBox text="Keep me logged in" selected="{loginModel>/keepme}" />
                    <Link text="Forgot password" press=".onForgotPassword" class="sapUiTinyMarginEnd" />
                </HBox>

                <Button text="Login" type="Emphasized" class="sapUiMediumMarginTop" press=".onLogin" width="100%"/>

                <HBox justifyContent="Center" class="sapUiSmallMarginTop">
                    <Text text="Don't have an account?" />
                    <Link text="Sign Up" class="sapUiTinyMarginBegin" press=".onSignUpGO"/>
                </HBox>



            </VBox>
        </content>

        <!-- <footer>
            <Toolbar>
                <content>
                    <ToolbarSpacer />
                    <Button type="Emphasized" text="Save" press=".onPressAddLink" />
                    <Button text="Close" type="Ghost" press=".onCloseDialog" ariaHasPopup="Dialog" />
                </content>
            </Toolbar>
        </footer> -->
    </Dialog>
</core:FragmentDefinition>
