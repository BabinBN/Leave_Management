<mvc:View
    controllerName="leavemanagement.controller.Query"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <Page title="Query Generator">
        <VBox class="sapUiMediumMargin">

            <!-- Query ID & Name -->
            <Input placeholder="Query Id" value="{query>/SqlCode}" width="20%" />
            <Input placeholder="Query Name" value="{query>/SqlName}" width="20%" />

            <!-- Query TextArea -->
            <TextArea placeholder="Enter Query...."  value="{query>/SqlText}" growing="true" rows="3" width="100%" />

            <!-- Arrow button -->
            <Button
                id="toggleArrow"
                icon="sap-icon://slim-arrow-down"
                type="Transparent"
                press=".onToggleTable"
                tooltip="Show/Hide Result" />

            <Table id="resultTable" visible="false">
                
            </Table>

            <HBox class="sapUiTinyMargin">
                <Button text="Execute" type="Emphasized" press=".onExecute" class="sapUiTinyMarginEnd"/>
                <Button text="Reset" type="Reject" press=".onReset"/>
            </HBox>

        </VBox>
    </Page>
</mvc:View>
